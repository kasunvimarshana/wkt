  "bugs": {
    "url": "https://github.com/kasunvimarshana/wkt/issues"
  },
  "homepage": "https://github.com/kasunvimarshana/wkt#readme",
  "devDependencies": {
    "@types/node": "^20.5.9",
    "typescript": "^5.2.2"
  }
}
